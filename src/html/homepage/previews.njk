<section class="previews">
  <p class="previews__title">{{recentlyWrote.title}}</p>
  <div class="previews__row">
    {% for post in recentlyWrote.posts %}
      <article class="preview">
        <header class="preview__header">
          <h2 class="preview__title">{{post.title | safe}}</h2>
          <p class="preview__short-descr">{{post.shortDescr}}</p>
        </header>
        <div class="preview__tags">
          <p class="preview__tag-intro"> Tags: 
          {% for figure in post.tags %}
            <span class="preview__tag">{{figure.caption}}</span>
          {% endfor %}
          </p>
        </div>
        <a class="preview__cta button" href="{{post.slug}}.html">Read more</a>
        <footer class="preview__footer">
          <p class="preview__signature">Posted by <a href="{{recentlyWrote.signatureUrl}}">Giovanni Rodighiero</a> on <time class="preview__date" datetime="{{post.date.value}}">{{post.date.label}}</time></p>
        </footer>
      </article>
    {% endfor %}
  </div>
  <a href="{{recentlyWrote.cta.url}}" class="previews__cta button">{{recentlyWrote.cta.label}}</a>
</section>